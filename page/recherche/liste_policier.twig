{# Recherche Force de l'Ordre #}
{% extends "_base.twig" %}

{% block style %}
<link rel="stylesheet" type="text/css" href="/assets/styles/global/recherche.css">
<link rel="stylesheet" type="text/css" href="/assets/styles/phone/recherche.css">
{% endblock %}

{% block description %}Liste {{ _BDDFaction }}{% endblock %}

{% block key %}Liste {{ _BDDFaction }}{% endblock %}

{% block title %}Liste {{ _BDDFaction }}{% endblock %}

{% block main %}
  <form class="recherche" action="/{{ _membreFaction }}" method="GET">
    <input type="search" name="flic_name"placeholder="{% if nom == NULL %}Nom{% else %}{{ nom }}{% endif %}">
    <input type="search" name="flic_firstname" placeholder="{% if prenom == NULL %}Prénom{% else %}{{ prenom }}{% endif %}">
    <input type="search" name="flic_matricule" placeholder="{% if matricule == NULL %}Matricule{% else %}{{ matricule }}{% endif %}">
    <button>Search</button>
  </form>

  {% for policier in policiers %}
    <div class="Resultat">
      <img class="round_profil" src="/assets/img/identite/{{ policier.photo}}" alt="Photo de {{ policier.nom }} {{ policier.prenom }}">
      <p>{{ policier.nom }} {{ policier.prenom }}</p>
      <a href="/{{ _membreFaction }}/{{ policier.matricule }}">Consulter</a>
    </div>
  {% else %}
    <div class="Resultat">
      <img src="/assets/img/logo.png" alt="Logo {{ _nomFaction }}">
      <p>Aucune agent ne correspond à votre recherche</p>
    </div>
  {% endfor %}
  </section>
{% endblock %}

{% block script %}{% endblock %}
