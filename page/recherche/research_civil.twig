{# Recherche Civil #}
{% extends "_base.twig" %}

{% block style %}
  <link rel="stylesheet" type="text/css" href="/assets/styles/global/recherche.css">
  <link rel="stylesheet" type="text/css" href="/assets/styles/phone/recherche.css">
{% endblock %}

{% block description %}Recherche Civil{% endblock %}

{% block key %}Recherche Civil{% endblock %}

{% block title %}Recherche Civil{% endblock %}

{% block main %}
  <form class="recherche" action="/recherche/civil" method="GET">
    <input type="search" name="civil_name"placeholder="{% if nom != NULL %}{{ nom }}{% else %}Nom{% endif %}">
    <input type="search" name="civil_firstname" placeholder="{% if prenom != NULL %}{{ prenom }}{% else %}Prénom{% endif %}">
    <input type="search" name="civil_phone" placeholder="{% if phone != NULL %}{{ phone }}{% else %}Téléphone{% endif %}">
    <input type="search" name="civil_job" placeholder="{% if job != NULL %}{{ job|upper }}{% else %}Métier{% endif %}">
    <button>Search</button>
  </form>

  {% for civil in civils %}
    <div class="Resultat">
      <img class="round_profil" src="/assets/img/identite/{{ civil.photo }}" alt="Photo de {{ civil.nom }} {{ civil.prenom }}">
      <p>{{ civil.nom }} {{ civil.prenom }}</p>
      <a href="/civil/{{ civil.id }}">Consulter</a>
    </div>
  {% else %}
    <div class="Resultat">
      <img src="/assets/img/logo.png" alt="Logo {{ _nomFaction }}">
      <p>Aucune personne ne correspond à votre recherche</p>
      <a href="#"></a>
    </div>
  {% endfor %}


{% endblock %}

{% block script %}{% endblock %}
