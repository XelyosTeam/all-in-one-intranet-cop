        <button id="6" type="button" onclick="afficheSousMenu(6)">Ajouter</button>

        <button id="60" type="button" onclick="redirectionButton(60, 0)">Civil</button>
        <button id="61" type="button" onclick="redirectionButton(61, 0)">Véhicule</button>
        <button id="63" type="button" onclick="redirectionButton(63, 0)">Arme</button>
        <button id="62" type="button" onclick="redirectionButton(62, 0)">Rapport</button>
        <button id="64" type="button" onclick="maskSousMenu()">Retour</button>

        {# Chat #}
        <button id="7" type="button" onclick="redirectionButton(7, 0)">Chat</button>

        {# Déconnexion #}
        <button id="8" type="button" onclick="redirectionButton(8, 0)">Deconnexion</button>
      </div>

    </header>

    <main>
