        <button id="42" type="button" onclick="redirectionButton(42, 0)">Plainte</button>
        <button id="43" type="button" onclick="maskSousMenu()">Retour</button>

        {# Casier #}
        <button id="5" type="button" onclick="afficheSousMenu(5)">Casier</button>

        <button id="50" type="button" onclick="redirectionButton(50, 0)">Civil</button>
        <button id="51" type="button" onclick="redirectionButton(51, 0)">Véhicule</button>
