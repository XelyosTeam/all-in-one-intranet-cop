    <!-- v2.1.0 -->
    {% set __infoFooter = {'nom': _nomcompletFaction, 'version': _Version} %}
    {% include "/templates/footer.twig" with __infoFooter %}
    <script type="text/javascript" src="/assets/script/menu.js"></script>
    {% block script %}{% endblock %}
