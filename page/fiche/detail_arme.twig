{# Détail casier judiciaire #}
{% extends "_base.twig" %}

{% block style %}
<link rel="stylesheet" type="text/css" href="/assets/styles/global/profil.css">
<link rel="stylesheet" type="text/css" href="/assets/styles/phone/profil.css">
{% endblock %}

{% block description %}Casier Judiciaire{% endblock %}

{% block key %}Casier Judiciaire{% endblock %}

{% block title %}Casier de  {{ civil.nom }} {{ civil.prenom }}{% endblock %}

{% block main %}

  {# Fiche Civil #}
  {% set _etat_ = {'goBack': 1} %}
  {% include "/templates/fiche_civil.twig" with _etat_ %}

  <section class="information_casier">
    <h1>Informations Arme</h1>
    <img src="/assets/img/logo.png" alt="Logo {{ _nomFaction }}">

    {% if _agent.supprimer > 0 %}
      <div class="delete-arme" onclick="confirmSuppressionArme('{{ arme.numero }}')">
        <img src="/assets/img/icon/deletearme.png" alt="Suppression arme">
      </div>
    {% endif %}

    <p><strong>Nom :</strong>{{ arme.nom }}</p>
    <p><strong>Catégorie :</strong>{{ arme.categorie }}</p>
    <p><strong>Numéro de série :</strong>{{ arme.prefix }}{{ arme.numero }}</p>
    <p><strong>Enregistrer par :</strong><a href="/{{ _membreFaction }}/{{ cop.matricule }}">{{ cop.grade|capitalize }} {{ cop.nom|capitalize }}</a></p>
    <img src="/assets/img/arme/{{ arme.photo }}" alt="Logo {{ arme.nom }}">
  </section>

{% endblock %}

{% block script %}
  <script src="/assets/script/event_saisie.js"></script>
{% endblock %}
